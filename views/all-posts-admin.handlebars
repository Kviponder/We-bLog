<div class="posts">
  {{#if posts.length}}
    <h2>Your Posts:</h2>
  {{else}}
    <h2>No Posts Yet!</h2>
  {{/if}}
  {{#each posts}}
    <div class="post">
      <h2>
        <a href="/post/{{id}}">{{title}}</a>
      </h2>
      <p>{{body}}</p>
    </div>
    <div class="caption">
      <p>Posted on {{format_date createdAt}}</p>
    </div>
    {{!-- <script src="/js/edit.js"></script> --}}
  {{/each}}
</div>