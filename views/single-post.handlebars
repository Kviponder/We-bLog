<div>
    <div class="post">
            <h2>
                {{post.title}}
            </h2>
            <p>{{post.body}}</p>
    </div>
    <div class="caption">
        <p>By {{req.body.user}} on  
            {{!-- {{format_date createdAt}} --}}
        </p>
    </div>

    <div>
        <h3>Comments</h3>
        <div class="comment">
            
            <p>this.body</p>
            <p>By this.username on 
                <br>
                 format_date this.createdAt
                </p>
        </div>
