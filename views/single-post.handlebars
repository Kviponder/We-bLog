<div>
    <div class="post">
            <h2>
                {{post.title}}
            </h2>
            <p>{{post.body}}</p>
    </div>
    <div class="caption">
        <p>By {{post.User.username}} on  
            {{format_date post.createdAt}}
        </p>
    </div>

    <div>
        <h3>Comments</h3>
        <div class="comment">
            
            <p>this.body</p>
            <p>By this.username on 
                <br>
                 format_date this.createdAt
                </p>
        </div>
    {{#if post.comments}}
    <div>
        <h3>Comments</h3>
        <div class="comment">
            {{#each post.comments}}
            <p>{{this.body}}</p>
            <p>By {{this.username}} on 
                {{format_date createdAt}}
                </p>
            {{/each}}
        </div>
        {{/if}} 
</div>